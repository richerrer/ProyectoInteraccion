<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_alarma"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.miCash.espol.activity.ConfigurarAlarma"
        android:background="#fff0f0f0"
        android:id="@+id/layout0">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#ffffffff"
            android:id="@+id/layout1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Hora del Recordatorio"
                android:id="@+id/textView"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/timeShown"
                android:layout_margin="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:layout_marginTop="5dp"
            android:id="@+id/layout2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sonido"
                android:id="@+id/textView3"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sonidos"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3"
                android:layout_alignRight="@+id/radioButton2"
                android:spinnerMode="dialog" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:layout_marginTop="5dp"
            android:id="@+id/layout3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Precisión/Cercanía (metros)"
                android:id="@+id/textView2"
                android:textStyle="bold"
                android:textSize="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:singleLine="false" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/precisiones"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textView4"
                android:layout_alignRight="@+id/radioButton2"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:layout_marginTop="5dp"
            android:id="@+id/layout4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Activar"
                android:id="@+id/textView5"
                android:textStyle="bold"
                android:textSize="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New ToggleButton"
                android:id="@+id/btn_activacion" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout5">

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Guardar"
                android:id="@+id/btn_guardarAlarma"
                android:layout_marginTop="10dp"
                android:background="@drawable/botonpulsado"
                android:clickable="true"
                android:textColor="#ffffffff" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Cancelar"
                android:id="@+id/btn_cancelarAlarma"
                android:layout_marginTop="10dp"
                android:background="@drawable/botonpulsado"
                android:clickable="true"
                android:textColor="#ffffffff" />
        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>