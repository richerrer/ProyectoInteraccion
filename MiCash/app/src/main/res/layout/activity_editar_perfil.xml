<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_editar_perfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.miCash.espol.activity.EditarPerfil"
        android:background="#fff0f0f0"
        android:id="@+id/layout0">

        <LinearLayout
            android:id="@+id/layout3"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nombre"
                android:id="@+id/textView"
                android:textAlignment="center"
                android:textSize="13dp"
                android:textColor="#ff000000"
                android:textIsSelectable="false"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_nombre"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/nombreEjemplo"
                android:inputType="textPersonName"
                tools:ignore="NestedWeights" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/apellido"
                android:id="@+id/textView4"
                android:textAlignment="center"
                android:textSize="13dp"
                android:textColor="#ff000000"
                android:textIsSelectable="false"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_apellido"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/apellidoEjemplo"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/oldContrasena"
                android:id="@+id/textView5"
                android:textAlignment="center"
                android:textSize="13dp"
                android:textColor="#ff000000"
                android:textIsSelectable="false"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_oldPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/oldContrasena"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_action_secure"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/newContrasena"
                android:id="@+id/textView6"
                android:textAlignment="center"
                android:textSize="13dp"
                android:textColor="#ff000000"
                android:textIsSelectable="false"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_newPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/newContrasena"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_action_secure" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contrasena_confirmar"
                android:id="@+id/textView7"
                android:textAlignment="center"
                android:textSize="13dp"
                android:textColor="#ff000000"
                android:textIsSelectable="false"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_newPasswordAgain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/contrasena_confirmar"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_action_secure" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout5">

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Guardar"
                android:id="@+id/btn_guardarAlarma"
                android:layout_marginTop="10dp"
                android:background="@drawable/botonpulsado"
                android:clickable="true"
                android:textColor="#ffffffff" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Cancelar"
                android:id="@+id/btn_cancelarAlarma"
                android:layout_marginTop="10dp"
                android:background="@drawable/botonpulsado"
                android:clickable="true"
                android:textColor="#ffffffff" />
        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
